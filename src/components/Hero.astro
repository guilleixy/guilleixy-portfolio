---
interface Props {
	pretitle?: string;
	titlenormal?: string;
	titleaccent?: string;
	tagline?: string;
	title?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, pretitle, titlenormal, titleaccent, title } = Astro.props;
---

<div class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		<h1 class="title font-halation">
			{pretitle ? (
				<h1 class="title font-halation">{pretitle}<span class="font-rinjani">{titlenormal}</span><span class="font-new-normal tracking-wider">{titleaccent}</span></h1>
			  ) : (
				<h1 class="title font-halation">{title}</h1>
			  )}
		</h1>
		{tagline && <p class="tagline">{tagline}</p>}
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-3xl);
		/* color: var(--gray-0); */
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}
	}
</style>
